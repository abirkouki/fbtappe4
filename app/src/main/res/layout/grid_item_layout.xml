<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_imagealiments"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/textView_alimentsName"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imageView_imagealiments"
        android:layout_toRightOf="@+id/imageView_imagealiments"
        android:text="@string/nom_de_l_aliment"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView_calories"
        android:layout_width="309dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/textView_alimentsName"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageView_imagealiments"
        android:layout_toRightOf="@+id/imageView_imagealiments"
        android:text="@string/calories"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView_add"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView_calories"
        android:layout_alignBottom="@+id/imageView_imagealiments"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:onClick="add"
        app:srcCompat="@drawable/add" />

    <ImageView
        android:id="@+id/imageView_rm"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView_calories"
        android:layout_alignBottom="@+id/imageView_imagealiments"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="182dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-4dp"
        android:onClick="rm"
        app:srcCompat="@drawable/rm" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:layout_below="@+id/textView_calories"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/imageView_rm"
        android:layout_toRightOf="@+id/imageView_rm"
        android:text="QuantitÃ© :" />

    <TextView
        android:id="@+id/textView_qte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/imageView_rm"
        android:layout_toRightOf="@+id/imageView_rm"
        android:text="0" />


</RelativeLayout>